#set($layout="layout/admin/adminDefault.vm")

<div id="primary" class="content-area">
    <div class="primary-inner">
        <div class="site-content" role="main">

            <header class="page-header" style="border-bottom: 5px solid #333333; margin-bottom: 40px;">
                <h1 class="page-title" style="font-size: 38px; line-height: 1.3;color: #333333">基本信息

                </h1>
            </header>


            <form class="form-horizontal">
                <div class="form-group ">
                    <label class="col-md-3 control-label" for="account">账号:</label>
                    <div class="col-md-8">
                        <input id="account" type="email" class="form-control" placeholder="645774075@qq.com"></input>
                    </div>
                </div>
                <div class="form-group ">
                    <label class="col-md-3 control-label" for="nick">昵称:</label>
                    <div class="col-md-8">
                        <input id="nick" type="text" class="form-control" placeholder="天脉"></input>
                    </div>
                </div>
                <div class="form-group ">
                    <label class="col-md-3 control-label" for="account">个人签名:</label>
                    <div class="col-md-8">
                        <input id="signature" type="text" class="form-control" placeholder="一个程序员"></input>
                    </div>
                </div>

                <div class="form-group" style="margin-top: 40px;">
                    <button type="submit" class="btn btn-success col-md-offset-9">保存</button>
                </div>

            </form>


        </div>
    </div>
</div>